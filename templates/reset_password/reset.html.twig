{% extends 'base.html.twig' %}

{% form_theme resetForm 'bootstrap_4_layout.html.twig' %}


{% block title %}réinitialisez votre mot de passe
{% endblock %}


{% block body %}
	<div class="container ">
		<div class="row justify-content-around">
			<h1 class="h3 mb-3 font-weight-normal">réinitialisez votre mot de passe</h1>
		</div>
		<div class="row  text-center" style="width: 400px; margin-left: auto; margin-right: auto">

			<div class="col border border-dark p-3">


				{{ form_start(resetForm) }}
				{{ form_row(resetForm.plainPassword) }}
				<button class="btn btn-primary">Réinitialiser le mot de passe</button>

				{{ form_end(resetForm) }}
			</div>
		</div>
	</div>

{% endblock %}
