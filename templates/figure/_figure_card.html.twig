<div class="card">
	<img src="\images\main\{{figure.mainpicture}}" class="img-thumbnail" alt="image de la figure">
	<div class="card-footer">
		<div class="row">
			<div class="col-6">
				<a href="{{path("figure_show", {'slug': figure.slug}) }}">{{figure.name}}</a>
			</div>
			{% if app.user %}
				<div class="col-3">
					<a href="{{path("figure_edit", {'slug': figure.slug}) }}">
						<i class="fas fa-pencil-alt"></i>
					</a>
				</div>
				<div class="col-3">
					<a href="{{path("figure_delete", {'slug': figure.slug}) }}">
						<i class="fas fa-trash-alt"></i>
					</a>
				</div>
			{% endif %}
		</div>
	</div>
</div>
