<div >
	{% if figure.images %}
		{% for image in figure.images %}
				<div>
					<img src="\images\main\{{image.name}}" class="img-thumbnail">
				</div>
			{% endfor %}
		
	{% endif %}
</div>
<div class="col-6">
	{% if figure.media %}
		
			{% for media in figure.media %}
				<div>
					<iframe src="https://www.youtube.com/embed/{{media.lien}}" frameborder="0" allow="accelerometer; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
				</div>
			{% endfor %}
		
	{% endif %}
</div>
<div class="row" id="close">
	<button>fermer les medias</button>
</div>
